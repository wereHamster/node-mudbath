
zero-box()
  margin 0; padding 0

html, body, ul
  zero-box()

body
  font 14px/1.4 "Myriad Pro", "Helvetica Neue", Helvetica, Arial, sans-serif
  color #333
  background url(/texture.png)


a
  color #b90101
  text-decoration none

  &:hover
    text-decoration underline

  &.logo
    position absolute
    top 2px; left 6px
    font-size 18px
    color #111
    z-index 9

    & > span
      font-size 12px


#container
  position relative
  width 90%
  min-width 500px
  margin 0 auto

#content
  margin-top 20px

p
  margin 1em 0
  color #333

h1
  &#title
    position relative
    padding 0 0 0 15px
    margin 0
    font-weight 100
    font-size 30px
    text-align left
    color #222
    border-bottom 1px solid #999

    .title
      color #333
      text-decoration none

    .subtitle
      font-size 14px
      margin-left 10px

#menu
    position absolute
    top 0; right 0
    font-weight 100

form
  margin 0 auto 10px
  position relative

  h2
    font-size 22px
    font-weight 100
    text-decoration underline
    text-align center

  > div
    margin: 0 0 3px;

    label
      float: left;
      width: 130px;
      text-align: right;
      padding-top: 4px;
      font-size 16px
      font-weight 100

    .input
      margin-left: 150px;

      input, textarea
        width: 100%;
        box-sizing border-box

  .submit
    padding-left: 150px;
    padding-top: 10px;

  &.error
    input
      border: 1px solid #f60

  input, textarea
    display inline-block

    padding 6px 10px 8px

    font-size 14px
    font-weight 200
    font-family 'Helvetica Neue', Helvetica

    border 1px solid #ddd
    border-radius 3px

    box-shadow 0 0 2px #ddd inset
    outline none

  textarea
    min-height 160px

  button
    padding 6px 10px 8px

    font-size 14px
    font-weight 200
    font-family 'Helvetica Neue', Helvetica

    position relative
    display inline-block
    color #333
    text-shadow 1px 1px 0 #fff
    white-space nowrap
    border none
    overflow visible
    cursor pointer
    border 1px solid #d4d4d4
    -webkit-border-radius 3px
    -moz-border-radius 3px
    border-radius 3px
    background #f4f4f4
    background -webkit-gradient(linear,left top,left bottom,from(#f4f4f4),to(#ececec))
    background -moz-linear-gradient(top,#f4f4f4,#ececec)

    &:hover
      color #fff
      text-decoration none
      text-shadow -1px -1px 0 rgba(0,0,0,0.3)
      border-color #518cc6
      border-bottom-color #2a65a0
      background #599bdc
      background -webkit-gradient(linear,left top,left bottom,from(#599bdc),to(#3072b3))
      background -moz-linear-gradient(top,#599bdc,#3072b3)

ul
  list-style-type none

.project
  display block
  margin 0 auto
  padding: 0 15px 20px

  .name
    font-size: 26px
    font-weight 100
    border-bottom 1px solid #bbb
    padding 0 10px

    time
      padding: 0 5px
      font-size: 12px

    .links
      padding-top: 16px
      font-size: 14px
      float: right;

      span
        padding: 0 3px

  .source
    font-weight: 100

  .stats
    float: right
    font-size: 13px
    margin-top 4px

  ul.refs
    margin 10px 0 0 10px

    li
      margin 0 0 20px

      img
        display none
        margin-left: 5px;
        float right
        margin-top 1px

      &.building img
        display inline-block

    .ref, time
      display: inline-block;

    .ref
      font: 18px 'ubuntu-mono', monospace;
      color #333
      margin: 0 0 6px

      &:hover
        text-decoration underline

    time
        font-size 14px

span
  &.bold
    font-weight: bold;
  &.underscore
    text-decoration: underscore;
  &.fg-red
    color: #9d261d;
  &.fg-green
    color: #46a546;

.commit
  font-size 14px
  font-weight 100

  margin 2px 0
  padding 1px 5px

  border 1px solid #ccc
  border-radius 2px
  background white

  .subject
    font-size 16px
    font-weight normal

  .id
    font 14px 'ubuntu-mono', monospace
  .author
    font-weight normal

.building .commit
  background #d9edf7
  border-color darken(#d9edf7, 20%)
.success .commit
  background #dff0d8
  border-color darken(#dff0d8, 20%)
.failure .commit
  background #f2dede
  border-color darken(#f2dede, 20%)

.output
  pre
    zero-box()
    padding: 10px;

    border: 1px solid #999;
    border-radius 3px

    line-height: 1.2em;
    font: 14px 'ubuntu-mono', monospace
    overflow: auto;
    background-clip: padding-box;
    background-color: #222;
    color: #eee;

ul.builds
    img
      display none
      margin-left: 5px;
      float right
      margin-top 2px

    .building img
        display inline-block

    li
        margin-bottom 40px
        font-size 18px

        span.title
            display inline-block

footer
  display: block;
  padding: 0 10px 20px;
  margin: 20px auto 5px;
  color: #777;
  text-shadow: #fff 0 1px 1px;
  overflow: hidden;
  font-size: 12px;
  border-top: 1px solid #ddd;

  > *
    margin-top 5px

  p
    float: left;
    text-align: center;
    font-weight: 200;

  ul
    float: right;

    li
      float: left;
      list-style: none;

      &:first-child
        padding-right: 5px;

      span
        display: inline-block
        padding: 0 3px
